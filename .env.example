# GitHub API Token (optional but recommended to avoid rate limiting)
# Generate at: https://github.com/settings/tokens
# Select "public_repo" scope for public repositories
GITHUB_TOKEN=your_github_token_here

# Spotify API (optional - for music integration)
# Get from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REFRESH_TOKEN=your_spotify_refresh_token_here

# Server Configuration
PORT=5000
NODE_ENV=development

# Optional: Email service configuration (for contact form)
# If you want to integrate with email services like SendGrid, Mailgun, etc.
EMAIL_SERVICE_API_KEY=your_email_service_api_key_here
EMAIL_FROM=your-email@example.com
EMAIL_TO=your-email@example.com
